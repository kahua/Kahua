(test-section "kahua-server %%_PROJECT_NAME_%%.kahua")

(with-worker
 (w `(,GOSH "-I.." "-I##KAHUA_LIB##" "kahua-server.scm" "-c" ,*config*
            "../%%_PROJECT_NAME_%%/%%_PROJECT_NAME_%%.kahua"))

 (test* "run %%_PROJECT_NAME_%%.kahua" #t (worker-running? w))


