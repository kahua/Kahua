(sys-mkdir "_work" #o755)
(sys-mkdir "_work/plugins" #o755)

(copy-file "../plugins/%%_PROJECT_NAME_%%.scm"  "_work/plugins/%%_PROJECT_NAME_%%.scm")

(define *config* "../%%_PROJECT_NAME_%%.conf")
(kahua-init *config*)

;;------------------------------------------------------------
