#
# Installing Kahua-related cgi scripts.
# The destination should be specified by --with-cgidir argument of configure
# script.
#
# $Id: Makefile.in,v 1.13 2006/09/08 05:40:54 bizenn Exp $
#

package	          = kahua
SHELL             = @SHELL@
prefix            = @prefix@
exec_prefix       = @exec_prefix@
bindir            = @bindir@
sbindir           = @sbindir@
libexecdir	  = @libexecdir@
datarootdir	  = @datarootdir@
datadir		  = @datadir@/$(package)
sysconfdir        = @sysconfdir@/$(package)
sharedstatedir    = @sharedstatedir@/$(package)
localstatedir     = @localstatedir@/$(package)
libdir            = @libdir@/$(package)
includedir        = @includedir@/$(package)
oldincludedir     = @oldincludedir@/$(package)
infodir           = @infodir@
mandir            = @mandir@

srcdir      = @srcdir@
VPATH       = $(srcdir)
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@
KAHUA_CGI_DIR = @KAHUA_CGIDIR@
KAHUA_CGI_USER = @KAHUA_CGIUSER@
KAHUA_CGILOG_DIR = @KAHUA_CGILOGDIR@

SOCKET_BASE_DIR = $(prefix)/tmp/$(package)

DESTDIR  =

GOSH = @GOSH@
GAUCHE_CONFIG = @GAUCHE_CONFIG@
INSTALL = @INSTALL@
MKINSTDIR = $(top_srcdir)/mkinstalldirs

SCRIPTS = kahua.cgi @FASTCGI_SCRIPT@

CONFIG_GENERATED = Makefile
.PHONY: all check clean distclean install maintainer-clean

.SUFFIXES: .in

all: $(SCRIPTS)

kahua.cgi: kahua.cgi.in
	$(top_srcdir)/cgi/fix-shebang.sh "$(GOSH)" "$(libdir)" "$(localstatedir)" \
		"$(SOCKET_BASE_DIR)" "$(KAHUA_CGILOG_DIR)" no kahua.cgi.in kahua.cgi
	chmod -w $@

kahua.fcg: kahua.cgi.in
	$(top_srcdir)/cgi/fix-shebang.sh "$(GOSH)" "$(libdir)" "$(localstatedir)" \
		"$(SOCKET_BASE_DIR)" "$(KAHUA_CGILOG_DIR)" yes kahua.cgi.in kahua.fcg
	chmod -w $@

check:

clean:
	rm -rf core $(SCRIPTS) *~

install:
	if test "$(KAHUA_CGI_DIR)" != ""; then \
	  $(MKINSTDIR) $(KAHUA_CGI_DIR); \
	  for f in $(SCRIPTS); do \
	    $(INSTALL) -m 555 $$f $(KAHUA_CGI_DIR)/$$f; \
	  done; \
	fi; \
	if test "$(KAHUA_CGILOG_DIR)" != ""; then \
	  $(MKINSTDIR) $(KAHUA_CGILOG_DIR); \
          chmod o-rwx $(KAHUA_CGILOG_DIR); \
	fi; \

uninstall:
	cd $(KAHUA_CGI_DIR) && rm -f $(SCRIPTS)
	-rmdir -p $(KAHUA_CGI_DIR)

distclean: clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean: clean
	rm -rf $(CONFIG_GENERATED)


