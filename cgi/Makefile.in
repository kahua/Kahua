#
# Installing Kahua-related cgi scripts.
# The destination should be specified by --with-cgidir argument of configure
# script.
#
# $Id: Makefile.in,v 1.3 2004/03/26 10:39:49 nobsun Exp $
#

package	          = kahua
SHELL             = @SHELL@
prefix            = @prefix@
exec_prefix       = @exec_prefix@
bindir            = @bindir@/$(package)
sbindir           = @sbindir@/$(package)
libexecdir	  = @libexecdir@/$(package)
datadir		  = @datadir@/$(package)
sysconfdir        = @sysconfdir@/$(package)
sharedstatedir    = @sharedstatedir@/$(package)
localstatedir     = @localstatedir@/$(package)
libdir            = @libdir@/$(package)
includedir        = @includedir@/$(package)
oldincludedir     = @oldincludedir@/$(package)
infodir           = @infodir@/$(package)
mandir            = @mandir@/$(package)

srcdir      = @srcdir@
VPATH       = $(srcdir)
top_builddir = @top_builddir@
top_srcdir   = @top_srcdir@
KAHUA_CGIDIR = @KAHUA_CGIDIR@

SOCKET_BASE_DIR = $(prefix)/tmp/$(package)

DESTDIR  =

GOSH = @GOSH@
GAUCHE_CONFIG = @GAUCHE_CONFIG@
INSTALL = @INSTALL@
MKINSTDIR = $(top_srcdir)/mkinstalldirs

SCRIPTS = kahua.cgi

CONFIG_GENERATED = Makefile 
.PHONY: all check clean distclean install maintainer-clean

.SUFFIXES: .in

.in:
	$(top_srcdir)/cgi/fix-shebang.sh "$(GOSH)" "$(libdir)" "$(SOCKET_BASE_DIR)" $@

all: $(SCRIPTS)

check:

clean:
	rm -rf core $(SCRIPTS) *~

install:
	if test "$(KAHUA_CGIDIR)" != ""; then \
	  $(MKINSTDIR) $(KAHUA_CGIDIR); \
	  for f in $(SCRIPTS); do \
	    $(INSTALL) -m 555 $$f $(KAHUA_CGIDIR)/$$f; \
	  done; \
	fi

uninstall:
	for f in $(SCRIPTS); do \
	  if test -r $(KAHUA_CGIDIR)/$$f; then \
	    rm -f $(KAHUA_CGIDIR)/$$f; \
	  fi; \
	done; \

distclean: clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean: clean
	rm -rf $(CONFIG_GENERATED)


